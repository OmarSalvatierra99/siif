# Configuración de SIPAC
# Copia este archivo a .env y ajusta los valores

# Entorno de ejecución
FLASK_ENV=development

# Base de datos PostgreSQL
DATABASE_URL=postgresql://sipac_user:sipac_password@localhost:5432/sipac_db

# Clave secreta de Flask (genera una única para producción)
SECRET_KEY=dev-secret-key-change-in-production

# Configuración de archivos
MAX_CONTENT_LENGTH=524288000  # 500 MB en bytes
UPLOAD_FOLDER=/tmp/sipac_uploads

# Procesamiento
MAX_WORKERS=4
CHUNK_SIZE=1000

# Paginación
ITEMS_PER_PAGE=50
MAX_ITEMS_PER_PAGE=1000
